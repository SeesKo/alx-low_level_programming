CC = gcc
SRC = main.c school.c
NAME = school

all: $(NAME)

$(NAME): main.o school.o
	$(CC) main.o school.o -o $@ -Wall -Werror -Wextra -pedantic

main.o: main.c m.h
	$(CC) -c main.c -o main.o -Wall -Werror -Wextra -pedantic

school.o: school.c m.h
	$(CC) -c school.c -o school.o -Wall -Werror -Wextra -pedantic

clean:
	@$(RM) $(NAME) main.o school.o *~

oclean:
	@$(RM) main.o school.o

fclean: clean

re: fclean all

.PHONY: all clean oclean fclean re
